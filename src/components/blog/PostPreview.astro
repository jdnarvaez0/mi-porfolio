---
import type { CollectionEntry } from "astro:content";
import type { HTMLTag, Polymorphic } from "astro/types";
import FormattedDate from "../FormattedDate.astro";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }> & {
	post: CollectionEntry<"post">;
	withDesc?: boolean;
};

const { post, as: Tag = "div", withDesc = false } = Astro.props;
const postDate = post.data.updatedDate ?? post.data.publishDate;
---

<FormattedDate
	date={postDate}
	class="min-w-[120px] text-sm text-gray-600 dark:text-gray-400 md:text-base"
/>
<Tag>
	{post.data.draft && <span class="text-red-500">(Draft) </span>}
	<a href={`/posts/${post.slug}/`} class="cactus-link text-sm md:text-base" data-astro-prefetch>
		{post.data.title}
	</a>
</Tag>
{withDesc && <q class="line-clamp-3 block text-base italic">{post.data.description}</q>}
